---
import Layout from "../../layouts/Layout.astro";
import Navigation from "../../components/Navigation.svelte";
import { getBlogPosts } from "../../lib/sanity";
import { urlFor } from "../../lib/sanity";
import type { BlogPost } from "../../types/index";

export async function getStaticPaths() {
  const posts = await getBlogPosts();

  return posts.map((post: BlogPost) => ({
    params: { slug: post.slug.current },
    props: { post },
  }));
}

const { post }: { post: BlogPost } = Astro.props;
const allPosts = await getBlogPosts();
const relatedPosts = allPosts
  .filter((p: BlogPost) => p._id !== post._id && p.category === post.category)
  .slice(0, 3);
---

<Layout
  title={post.seo?.metaTitle || post.title}
  description={post.seo?.metaDescription || post.excerpt}
  image={post.featuredImage
    ? urlFor(post.featuredImage).width(1200).height(630).url()
    : undefined}
>
  <Navigation client:load />

  <main class="pt-16">
    <!-- Article Header -->
    <article class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <ol class="flex items-center space-x-2 text-sm text-gray-400">
            <li>
              <a
                href="/"
                class="hover:text-white transition-colors duration-300">Home</a
              >
            </li>
            <li class="text-gray-600">/</li>
            <li>
              <a
                href="/blog"
                class="hover:text-white transition-colors duration-300">Blog</a
              >
            </li>
            <li class="text-gray-600">/</li>
            <li class="text-white">{post.title}</li>
          </ol>
        </nav>

        <!-- Article Meta -->
        <div class="mb-8">
          <div class="flex items-center justify-between mb-4">
            <span
              class="bg-purple-500/20 text-purple-300 px-3 py-1 rounded-full text-sm font-medium"
            >
              {post.category}
            </span>
            <time class="text-gray-400 text-sm">
              {
                new Date(post.publishedAt).toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "long",
                  day: "numeric",
                })
              }
            </time>
          </div>

          <h1
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight"
          >
            {post.title}
          </h1>

          <p class="text-xl text-gray-300 leading-relaxed mb-6">
            {post.excerpt}
          </p>

          <!-- Tags -->
          {
            post.tags && post.tags.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-6">
                {post.tags.map((tag: string) => (
                  <span class="bg-slate-700/50 text-gray-300 px-3 py-1 rounded-full text-sm font-medium">
                    #{tag}
                  </span>
                ))}
              </div>
            )
          }

          <!-- Reading Time -->
          <div class="flex items-center text-gray-400 text-sm">
            <span>‚è±Ô∏è {post.readingTime || 5} min read</span>
          </div>
        </div>

        <!-- Featured Image -->
        {
          post.featuredImage && (
            <div class="mb-12">
              <img
                src={urlFor(post.featuredImage).width(800).height(400).url()}
                alt={post.title}
                class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-xl"
              />
            </div>
          )
        }

        <!-- Article Content -->
        <div class="prose prose-lg prose-invert max-w-none">
          {
            post.content.map((block: any) => {
              if (block._type === "block") {
                return (
                  <div class="text-gray-300 leading-relaxed mb-6">
                    {block.children.map((child: any) => {
                      if (child._type === "span") {
                        if (child.marks?.includes("strong")) {
                          return (
                            <strong class="text-white">{child.text}</strong>
                          );
                        }
                        if (child.marks?.includes("em")) {
                          return <em class="text-purple-300">{child.text}</em>;
                        }
                        if (child.marks?.includes("code")) {
                          return (
                            <code class="bg-slate-700 text-purple-300 px-2 py-1 rounded text-sm">
                              {child.text}
                            </code>
                          );
                        }
                        return child.text;
                      }
                      return "";
                    })}
                  </div>
                );
              }
              if (block._type === "image") {
                return (
                  <div class="my-8">
                    <img
                      src={urlFor(block).width(600).url()}
                      alt={block.alt || ""}
                      class="w-full rounded-lg"
                    />
                  </div>
                );
              }
              if (block._type === "code") {
                return (
                  <pre class="bg-slate-800 rounded-lg p-4 overflow-x-auto my-6">
                    <code class="text-gray-300">{block.code}</code>
                  </pre>
                );
              }
              return null;
            })
          }
        </div>

        <!-- Share Buttons -->
        <div class="mt-12 pt-8 border-t border-slate-700">
          <h3 class="text-lg font-semibold text-white mb-4">
            Share this article
          </h3>
          <div class="flex space-x-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg transition-colors duration-300"
            >
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="bg-blue-700 hover:bg-blue-800 text-white px-4 py-2 rounded-lg transition-colors duration-300"
            >
              LinkedIn
            </a>
            <button
              onclick="navigator.clipboard.writeText(window.location.href)"
              class="bg-slate-700 hover:bg-slate-600 text-white px-4 py-2 rounded-lg transition-colors duration-300"
            >
              Copy Link
            </button>
          </div>
        </div>
      </div>
    </article>

    <!-- Related Posts -->
    {
      relatedPosts.length > 0 && (
        <section class="py-16 px-4 sm:px-6 lg:px-8 bg-slate-800/30">
          <div class="max-w-6xl mx-auto">
            <h2 class="text-2xl font-semibold text-white mb-8">
              Related Articles
            </h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
              {relatedPosts.map((relatedPost: BlogPost) => (
                <article class="bg-slate-800/50 rounded-xl overflow-hidden border border-slate-700 hover:border-purple-500/50 transition-all duration-300">
                  <div class="relative h-48 bg-gradient-to-br from-purple-500/20 to-pink-500/20">
                    {relatedPost.featuredImage ? (
                      <img
                        src={urlFor(relatedPost.featuredImage)
                          .width(400)
                          .height(200)
                          .url()}
                        alt={relatedPost.title}
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <div class="absolute inset-0 flex items-center justify-center">
                        <div class="text-purple-400/50 text-4xl">üìù</div>
                      </div>
                    )}
                  </div>
                  <div class="p-6">
                    <div class="flex items-center justify-between mb-3">
                      <span class="text-purple-400 text-sm font-medium">
                        {relatedPost.category}
                      </span>
                      <time class="text-gray-400 text-sm">
                        {new Date(relatedPost.publishedAt).toLocaleDateString(
                          "en-US",
                          {
                            month: "short",
                            day: "numeric",
                          }
                        )}
                      </time>
                    </div>
                    <h3 class="text-lg font-semibold text-white mb-3 hover:text-purple-300 transition-colors duration-300">
                      <a href={`/blog/${relatedPost.slug.current}`}>
                        {relatedPost.title}
                      </a>
                    </h3>
                    <p class="text-gray-400 text-sm leading-relaxed">
                      {relatedPost.excerpt}
                    </p>
                  </div>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Back to Blog -->
    <div class="py-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <a
          href="/blog"
          class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 hover:from-purple-600 hover:to-pink-600 text-white rounded-lg font-semibold transition-all duration-300 transform hover:scale-105"
        >
          ‚Üê Back to Blog
        </a>
      </div>
    </div>
  </main>
</Layout>
