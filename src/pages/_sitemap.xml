---
import { getBlogPosts, getProjects } from '../lib/sanity';

const blogPosts = await getBlogPosts();
const projects = await getProjects();

const staticPages = [
  '/',
  '/blog',
  '/projects',
  '/404'
];

const blogPages = blogPosts.map(post => `/blog/${post.slug.current}`);
const projectPages = projects.map(project => `/projects/${project.slug.current}`);

const allPages = [...staticPages, ...blogPages, ...projectPages];
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {allPages.map(page => (
    <url>
      <loc>{new URL(page, Astro.site).href}</loc>
      <lastmod>{new Date().toISOString()}</lastmod>
      <changefreq>{page === '/' ? 'weekly' : 'monthly'}</changefreq>
      <priority>{page === '/' ? '1.0' : '0.8'}</priority>
    </url>
  ))}
</urlset>
